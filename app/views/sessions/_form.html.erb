<%= form_tag '/login' do %>
  <div class="container">
    <div class="row">
      <div class="col mb-3"> <%# User Name %>
        <%= text_field_tag :name, nil, placeholder: "Username", class: "form-control" %>
      </div>
    </div> 
    <div class="row">
      <div class="col mb-3"> <%# Password %>
            <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>          
      </div>
    </div>
    
    <div class="row">
      <div class="d-grid gap-2">
        <%= submit_tag "Logon", class: 'btn btn-dark'%>
      </div>
    </div>
  </div>
<% end %>