<div class="container">
    <div class="row">
        <div class="col">
            <h1>Cart | You can have it all</h1>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
    <ul>
      <%sum = 0%>
      <% @cart.each do |product, count| %>
        <div class="col">
          <li><%="#{product["name"]} | $#{product["price"]} x #{count}"%></li>
          <%sum += product["price"] * count%>
        </div>
      <% end %>
    </ul>
    </div>
    <div class="row">
      <div class="col">
        <%="Your total is | $#{sum} "%><button class="btn-dark btn-sm" type="button"><%= link_to "Checkout", checkout_path%></button>
      </div>
    </div>
</div>