<%= form_with model: @product do |form| %>
  <div class="mb-3"> <%# Product Name %>
    <%= form.text_field :name, :placeholder => "Product Name", class: "form-control" %>
  </div>
  <div class="mb-3"> <%# Product Description%>
    <%= form.text_area :description, :placeholder => "Product Description", class: "form-control" %>
  </div>
  <div class="mb-3"> <%# Product Stock %>
    <%= form.number_field :stock, :placeholder => "Stock", class: "form-control" %>
  </div>
  <div class="mb-3"> <%# Product Price %>
    <%= form.number_field :price, step: 0.01, :placeholder => "Price", class: "form-control" %>
  </div>
  <div>
    <%= form.label :status %><br>
    <%= form.select  :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>
  <div>
    <%= form.submit class: 'btn-dark btn-sm'%>
  </div>
<% end %>